    Artist
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    {{#each songs}}
    <li><a id="artist" href="#">{{artist}}</a></li>
    {{/each}}
  </ul>
</div>

